
@{
    ViewBag.Title = "UpdateProfile";
}


<div class="wrapper d-flex align-items-stretch">
    <nav id="sidebar">
        <div class="custom-menu">
            <button type="button" id="sidebarCollapse" class="btn btn-primary"></button>
        </div>
        <div class="img bg-wrap text-center py-4" style="background-image: url(../Content/sidebar/images/bg_1.jpg);">
            <div class="user-logo">
                <div class="img" style="background-image: url(../Content/sidebar/images/logo.jpg);"></div>
                <h3>Catriona Henderson</h3>
            </div>
        </div>
        <ul class="list-unstyled components mb-5">
            <li class="active">
                <a href="@Url.Action("SearchTeacher", "Student")"><span class="fa fa-search mr-3"></span> Search A Teacher</a>
            </li>
            <li>
                <a href="@Url.Action("ChatMessengerPage","ChatMessenger")"><span class="fa fa-comments mr-3 notif"><small class="d-flex align-items-center justify-content-center">*</small></span> Chat Messenger</a>
            </li>
            <li>
                <a href="@Url.Action("AllUserListVideoCallPage","VideoCall")"><span class="fa fa-phone-square mr-3"></span> Video Call</a>
            </li>
            <li>
                <a href="@Url.Action("SendFeedback","Student")"><span class="fa fa-commenting mr-3"></span>Give Feedback Or Report</a>
            </li>
            <li>
                <a href="@Url.Action("ViewFeedback","Student")"><span class="fa fa-commenting mr-3"></span> View Feedback</a>
            </li>
            <li>
                <a href="@Url.Action("SendPaymentForm","Payment")"><span class="fa fa-money mr-3"></span>Send Payment</a>
            </li>
            <li>
                <a href="@Url.Action("UpdateProfile", "Student")"><span class="fa fa-pencil mr-3"></span> update Profile</a>
            </li>
            <li>
                <a href="@Url.Action("ChangePasswordPage", "ChangePassword")"><span class="fa fa-support mr-3"></span> Change Password</a>
            </li>
            <li>
                <a href="@Url.Action("Index","Home")"><span class="fa fa-sign-out mr-3"></span> Sign Out</a>
            </li>
        </ul>

    </nav>

    <!-- Page Content  -->
    <div id="content" class="p-4 p-md-5 pt-5">
        <section class="site-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-7">
                        <div class="form-wrap">
                            <h2 class="mb-5">Update Your account information</h2>
                            <form action="#" method="post">
                                <div class="row">
                                    <div class="col-md-12 form-group">
                                        <label for="name">Email Address</label>
                                        <input type="text" id="name" class="form-control py-2">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 form-group">
                                        <label for="name">Password</label>
                                        <input type="password" id="name" class="form-control py-2 ">
                                    </div>
                                </div>
                                <div class="row mb-5">
                                    <div class="col-md-12 form-group">
                                        <label for="name">Re-type Password</label>
                                        <input type="password" id="name" class="form-control py-2">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 form-group">
                                        <input type="submit" value="Update" class="btn btn-primary px-5 py-2">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<script src="~/Content/sidebar/js/jquery.min.js"></script>
