
@{
    ViewBag.Title = "Dashboard";
}


<div class="wrapper d-flex align-items-stretch">
    <nav id="sidebar">
        <div class="custom-menu">
            <button type="button" id="sidebarCollapse" class="btn btn-primary"></button>
        </div>
        <div class="img bg-wrap text-center py-4" style="background-image: url(../Content/sidebar/images/bg_1.jpg);">
            <div class="user-logo">
                <div class="img" style="background-image: url(../Content/sidebar/images/logo.jpg);"></div>
                <h3>Admin@admin.com</h3>
            </div>
        </div>
        <ul class="list-unstyled components mb-5">
            <li>
                <a href="@Url.Action("SearchUser", "Admin")"><span class="fa fa-search mr-3"></span> Search A User</a>
            </li>
            <li>
                <a href="@Url.Action("ShowListOfUsers", "Admin")"><span class="fa fa-comments mr-3 notif"><small class="d-flex align-items-center justify-content-center">*</small></span>See All User</a>
            </li>
            <li>
                <a href="@Url.Action("VerifyTeacher", "Admin")"><span class="fa fa-phone-square mr-3"></span>Verify Teacher</a>
            </li>
            <li>
                <a href="@Url.Action("CheckReport", "Admin")"><span class="fa fa-money mr-3"></span>Check Report</a>
            </li>
            <li>
                <a href="@Url.Action("UpdateProfile", "Admin")"><span class="fa fa-pencil mr-3"></span> update Profile</a>
            </li>
            <li>
                <a href="@Url.Action("AdminChangePasswordPage", "ChangePassword")"><span class="fa fa-support mr-3"></span> Change Password</a>
            </li>
            <li>
                <a href="@Url.Action("Index","Home")"><span class="fa fa-sign-out mr-3"></span> Sign Out</a>
            </li>
        </ul>

    </nav>

    <!-- Page Content  -->
    <div id="content" class="p-4 p-md-5 pt-5">
        <h2 class="mb-4">Welcome to Admin Dashboard</h2>
        <p>Hope you will enjoy our site.</p>
    </div>
</div>

<script src="~/Content/sidebar/js/jquery.min.js"></script>
